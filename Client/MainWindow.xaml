<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ViewModel}"
        Title="MainWindow" Height="400" Width="320">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Command="{Binding JoinCommand}">Join</Button>
            <Button Command="{Binding LeaveCommand}">Leave</Button>
            <Label>IP:</Label>
            <TextBox MinWidth="100" Text="{Binding Ip}"></TextBox>
            <Label>Port:</Label>
            <TextBox MinWidth="50" Text="{Binding Port}"></TextBox>
        </ToolBar>
        <DockPanel Margin="10,0,10,10" DockPanel.Dock="Bottom">
            <Button IsDefault="True" Margin="10,0,0,0" Padding="20,5" DockPanel.Dock="Right" Command="{Binding SendMessageCommand}">Send</Button>
            <TextBox VerticalContentAlignment="Center" Text="{Binding Message}"></TextBox>
        </DockPanel>
        <ListBox Margin="10" ItemsSource="{Binding Messages}"></ListBox>
    </DockPanel>
</Window>